@model teste.Models.Lista

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data Conclusão</th>
            <th>Status</th>
        </tr>
    </thead>
    @for (int i = 0; i < Model.Tarefas.Count; i++)
    {
        <tr>
            <th>                
                @Html.EditorFor(model => model.Tarefas[i].titulo, new { htmlAttributes = new { @class = "form-control" } })
            </th>
            <th>                
                @Html.EditorFor(model => model.Tarefas[i].descricao, new { htmlAttributes = new { @class = "form-control" } })
            </th>
            <th>                
                @Html.EditorFor(model => model.Tarefas[i].data_conclusao, new { htmlAttributes = new { @class = "form-control" } })
            </th>
            <th>                
                @Html.EditorFor(model => model.Tarefas[i].status, new { htmlAttributes = new { @class = "form-control" } })
            </th>
        </tr>
    }

</table>



